# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Event
POST    /events                 controllers.EventController.createEvent
GET     /events                 controllers.EventController.getAllEvents
GET     /events/:id            controllers.EventController.getEvent(id: Long)
GET     /events/:id/tasks      controllers.EventController.getEventTasks(id: Long)

# Task
POST    /tasks                 controllers.TaskController.createTask
PATCH   /tasks/:id/status      controllers.TaskController.updateTaskStatus(id: Long)
GET     /tasks/:id             controllers.TaskController.getTask(id: Long)
GET     /teams/:teamId/tasks   controllers.TaskController.getTasksByTeam(teamId: Long)

# Team
POST    /teams                 controllers.TeamController.createTeam
GET     /teams                 controllers.TeamController.getAllTeams
GET     /teams/:id             controllers.TeamController.getTeam(id: Long)

# Issue
POST    /issues                controllers.IssueController.reportIssue
GET     /tasks/:taskId/issues controllers.IssueController.getIssuesForTask(taskId: Long)
GET     /issues               controllers.IssueController.getAllIssues

POST    /api/login                controllers.AuthController.login
